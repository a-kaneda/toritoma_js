{
  "name": "toritoma_js",
  "version": "1.0.0",
  "description": "",
  "main": "./src/main.js",
  "scripts": {
    "build": "npm-run-all tsc webpack",
    "tsc": "tsc -p ./tsconfig.json",
    "webpack": "webpack",
    "start": "http-server ./dest -p 8080",
    "copyall": "npm-run-all copy:*",
    "copy:html": "cpx \"./src/html/{*.html,*.css}\" ./dest",
    "copy:resource": "cpx \"./src/**/{*.png,*.json,*.mp3}\" ./dest",
    "copy:font": "cpx \"./src/fonts/NotoSansCJKjp-Regular-min.ttf\" ./dest/fonts",
    "copy:map": "cpx \"./src/map/*.js\" ./dest/map",
    "copy:vendor": "cpx \"./src/vendor/*.js\" ./dest/vendor"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/a-kaneda/toritoma_js.git"
  },
  "author": "Akihiro Kaneda",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/a-kaneda/toritoma_js/issues"
  },
  "homepage": "https://github.com/a-kaneda/toritoma_js#readme",
  "devDependencies": {
    "@types/pixi.js": "^4.7.3",
    "cpx": "^1.5.0",
    "html-loader": "^0.5.0",
    "http-server": "^0.10.0",
    "jsdoc": "^3.5.5",
    "npm-run-all": "^4.1.2",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2",
    "webpack": "^2.7.0",
    "webpack-dev-server": "^2.6.1"
  }
}
